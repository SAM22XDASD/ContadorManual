<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContadorManual.MainPage">

    <StackLayout>
        <Frame Margin="16" CornerRadius="0" BorderColor="LightGray">
            <StackLayout Orientation="Horizontal" Margin="16" HorizontalOptions="Center">
                <Label Text="Conteo: "></Label>
                <Label  Text="{Binding Conteo}" Margin="16" FontSize="42" HorizontalOptions="Center" x:Name="ConteoLabel"></Label>
            </StackLayout>
        </Frame>

        <StackLayout>
            <Button Text="Contar" FontSize="Medium" x:Name="ContarButton" Clicked="ContarButton_Clicked"></Button>
            <Button Text="Reiniciar" FontSize="Medium" x:Name="ReiniciarButton" Clicked="ReiniciarButton_Clicked"></Button>
        </StackLayout>
    </StackLayout>    
    
</ContentPage>
